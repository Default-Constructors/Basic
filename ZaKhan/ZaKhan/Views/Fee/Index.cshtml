@model IEnumerable<ZaKhan.Model.FeeView>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/Site.css" rel="stylesheet" />
<div class="panel panel-default">
    <div class="panel-heading" align="center">
        <h2>Fees</h2>
    </div>
<div class="panel-body">

    <p>
        @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-primary" })
    </p>

    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vat)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td>
                    | @Html.ActionLink("Edit", "Edit", new { id = item.FeeId }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.FeeId }, new { @class = "btn btn-success" }) |


                </td>
            </tr>
        }

    </table>
    @Html.ActionLink("Back", "Admin", "Login", null, new
                    {
                        @class = "btn btn-success"
                    })
</div>
</div>
