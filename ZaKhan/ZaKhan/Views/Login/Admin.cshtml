
@{
    ViewBag.Title = "Admin";
}

<div class="panel panel-default">
    <div class="panel-heading" align="center">
        <h2>Admin Page</h2>
    </div>
<div class="panel-body">



    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th>Categories</th>
            <th>Brands</th>
            <th>Products</th>
            <th>Orders</th>
            <th>Roles</th>

        </tr>

        <tr>
            <td>@Html.ActionLink("Create New Category", "Create", "Category", "", new {@class = "btn btn-primary"})<br/><br/>@Html.ActionLink("View All Categories", "Index", "Category", "", new {@class = "btn btn-success"})</td>
            <td>@Html.ActionLink("Create New Brand", "Create", "Brand", "", new {@class = "btn btn-primary"})<br/><br/>@Html.ActionLink("View All Brands", "Index", "Brand", "", new {@class = "btn btn-success"})</td>
            <td>@Html.ActionLink("Manage Product", "Index", "Product", "", new {@class = "btn btn-primary"})</td>
            <td>@Html.ActionLink("View All Patient Orders", "Index", "Order", "", new {@class = "btn btn-primary"})</td>
            <td>@Html.ActionLink("Manage Roles", "Index", "Roles", "", new {@class = "btn btn-primary"})</td>

        </tr>



    </table>
    <br/>
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th>Patiens</th>
            <th>Store Locations</th>
            <th>Fees</th>
            <th>Audits</th>
            <th>Bookings</th>
        </tr>

        <tr>

            <td>@Html.ActionLink("View All Patients", "PatientList", "Patient", "", new {@class = "btn btn-primary"})</td>
            <td>@Html.ActionLink("Manage Store Details", "Index", "StoreLocation", "", new {@class = "btn btn-primary"})</td>
            <td>@Html.ActionLink("Manage Fees", "Index", "Fee", "", new {@class = "btn btn-primary"})</td>
            <td>@Html.ActionLink("View Audit Records", "AuditRecords", "Audit", "", new {@class = "btn btn-primary"})</td>
            <td>@Html.ActionLink("View All Bookings", "Index", "Booking", "", new {@class = "btn btn-primary"})</td>

        </tr>
    </table>

    <br />
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th>
                Optometrist
            </th>
        </tr>
        <tr>
            <td>@Html.ActionLink("Manage Optometrists", "Index", "Optometrist", "", new { @class = "btn btn-primary" })</td>
        </tr>
    </table>


    <!-- JavaScript -->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <script src="~/signalr/hubs"></script>


    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var userActivity = $.connection.userActivityHub;

            // Create a function that the hub can call back to display messages.
            userActivity.client.updateUsersOnlineCount = function (count) {
                // Add the message to the page.
                $('#usersCount').text(count);
            };

            $.connection.hub.start();
        });
    </script>


</div>
</div>